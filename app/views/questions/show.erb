<div class="container">
<%= @question.title %><br>
<%= @question.body %>
</div>

<div class="vote">
  
  <% if logged_in? %>
    <form class="vote-form upvote-form" method="post" action="/questions/<%= @question.id %>/vote" >
      <input class="upvote-button" type="submit" name="value" value="1">
    </form>
  <% end %>

    <span class="vote-counter"><%= @question.score %></span>

  <% if logged_in? %>
    <form class="vote-form downvote-form" method="post" action="/questions/<%= @question.id %>/vote" >
      <input class="downvote-button" type="submit" name="value" value="-1">
    </form>
  <% end %>
  
</div>