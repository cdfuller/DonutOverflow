<div class="container">
  <h1><%= @question.title %></h1><br>
  <span class='byline'>Created by <%=@question.author.username%> on <%=standard_datetime(@question.created_at)%></span>
  <p><%= @question.body %></p>
</div>

<div class='comment'></div>

<div class="answers container">
<h2>Answers</h2>
  <% @answers.each do |answer| %>
  	<span class='byline'>Created by <%=answer.user.username%> on <%=answer.created_at%></span>
    <p><%= answer.body %></p><br>
  <% end %>
  <%=@errors%>
<%=erb :_answerform %>
</div>


