<div class="container">
  <h1><%= @question.title %></h1><br>
  <span class='byline'>Created by <%=@question.author.username%> on <%=standard_datetime(@question.created_at)%></span>
  <p><%= @question.body %></p>

  <div class="comments container">
  <h2>Comments</h2>

    <% @comments.each do |comment| %>
    	<span class='byline'>Created by <%=comment.user.username%> on <%=standard_datetime(comment.created_at)%></span>
      <p><%= comment.body %></p><br>
    <% end %>

    <%= erb :'_error' %>

    <%= erb :'comments/new' %>
  </div>
</div>

<!-- <div class='comment'></div> -->

<div class="answers container">
<h2>Answers</h2>

  <% @answers.each do |answer| %>
  	<span class='byline'>Created by <%=answer.user.username%> on <%=standard_datetime(answer.created_at)%></span>
    <p><%= answer.body %></p><br>
  <% end %>

  <%= erb :'_error' %>

  <%=erb :_answerform %>

  <div class="comments container">
  <h2>Comments</h2>

    <% @comments.each do |comment| %>
      <span class='byline'>Created by <%=comment.user.username%> on <%=standard_datetime(comment.created_at)%></span>
      <p><%= comment.body %></p><br>
    <% end %>

    <%= erb :'_error' %>

    <%= erb :'comments/new' %>
  </div>

</div>
