<div class="container">
  <h1><%= @question.title %></h1><br>
  <span class='byline'>Created by <%=@question.author.username%> on <%=standard_datetime(@question.created_at)%></span>
  <p><%= @question.body %></p>
</div>

<div class='comment'></div>

<div class="answers container">
<h2>Answers</h2>

  <% @answers.each do |answer| %>
  	<span class='byline'>Created by <%=answer.user.username%> on <%=standard_datetime(answer.created_at)%></span>
    <p><%= answer.body %></p><br>
  <% end %>

  <%= erb :'_error' %>

  <%=erb :_answerform %>
</div>

<div class="vote">
  
  <% if logged_in? %>
    <form class="vote-form upvote-form" method="post" action="/questions/<%= @question.id %>/vote" value="1">
      <input class="upvote-button" type="submit" name="upvote">
    </form>
  <% end %>

    <span class="vote-counter"><%= @question.score %></span>

  <% if logged_in? %>
    <form class="vote-form downvote-form" method="post" action="/questions/<%= @question.id %>/vote" >
      <input class="downvote-button" type="submit" name="downvote" value="-1">
    </form>
  <% end %>
  
</div>