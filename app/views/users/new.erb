<div class="columns is-vcentered" id="login-box">
  <div class="column is-4 is-offset-4">
    <% if @user %>
      <%= erb :'_error', locals: { errors: @user.errors.full_messages } %>
    <% end %>
    <h1 class="title">Register</h1>
    <div class="box">
    <form class="login-form" method="post" action="/users">
      <label for="username" class="label">Username</label>
      <p class="control">
        <input type="text" class="input" name="user[username]" id="username" placeholder="yibintheredonethat">
      </p>
      <label for="email" class="label">Email</label>
      <p class="control">
        <input type="email" class="input" name="user[email]" placeholder="yibin@yibin.com" id="email">
      </p>
      <label for="password" class="label">Password</label>
      <p class="control">
        <input type="password" class="input" placeholder="●●●●●●●" name="user[password]" id="password">
      </p>
      <p class="control">
        <button class="button is-primary" type="submit">Register</button>
      </p>
    </form>
    </div>
  </div>
</div>
